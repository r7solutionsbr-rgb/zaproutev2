generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id           String   @id @default(uuid())
  name         String
  slug         String   @unique
  plan         String
  status       String   @default("ACTIVE") // ACTIVE, BLOCKED, TRIAL
  subscriptionEndsAt DateTime?
  
  // --- CAMPOS DE CONFIGURAÇÃO ---
  cnpj         String?
  address      String?
  logoUrl      String?
  primaryColor String?  @default("#2563eb")
  config       Json?    @default("{}") // <--- NOVO

  // --- RELACIONAMENTOS ---
  users        User[]
  drivers      Driver[]
  vehicles     Vehicle[]
  routes       Route[]
  customers    Customer[]
  sellers      Seller[]   // <--- NOVO (Relacionamento inverso)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  occurrences  Occurrence[]
  journeyEvents DriverJourneyEvent[]
  currentJourneyStatus JourneyEventType?
  lastJourneyEvent     DateTime?
  @@index([status])
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  password          String   
  name              String
  role              String   
  
  phone             String?
  avatarUrl         String?
  status            String   @default("ACTIVE")
  
  resetToken        String?
  resetTokenExpires DateTime?

  tenantId          String
  tenant            Tenant   @relation(fields: [tenantId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Driver {
  id              String   @id @default(uuid())
  name            String
  cpf             String
  externalId      String?  // <--- NOVO
  cnh             String
  cnhCategory     String
  cnhExpiration   DateTime
  phone           String
  email           String
  status          String   
  avatarUrl       String?
  rating          Float?   @default(5.0)
  totalDeliveries Int      @default(0)
  
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id])
  
  vehicleId       String?
  vehicle         Vehicle? @relation(fields: [vehicleId], references: [id])
  
  routes          Route[]
  deliveries      Delivery[]
  occurrences     Occurrence[]
  journeyEvents   DriverJourneyEvent[]
  currentJourneyStatus JourneyEventType?
  lastJourneyEvent     DateTime?
  @@index([tenantId])
  @@index([phone]) // Crítico para o Webhook achar rápido
  @@index([cpf])
  @@index([status])
}

model Vehicle {
  id              String   @id @default(uuid())
  plate           String
  brand           String
  model           String
  year            Int
  capacityWeight  Float
  capacityVolume  Float
  fuelType        String
  status          String   
  lastMaintenance DateTime?
  nextMaintenance DateTime?
  imageUrl        String?

  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id])
  
  drivers         Driver[] 
  routes          Route[]
  @@index([tenantId])
}

// --- NOVO MODELO: SELLER (VENDEDOR) ---
model Seller {
  id        String   @id @default(uuid())
  name      String
  phone     String?
  email     String?
  status    String   @default("ACTIVE")
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  
  customers Customer[] // Vendedor tem vários clientes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([tenantId])
  @@index([name])
}

model Customer {
  id                String   @id @default(uuid())
  legalName         String
  tradeName         String
  cnpj              String
  stateRegistration String?
  email             String
  phone             String
  whatsapp          String?
  salesperson       String? // Mantido como legado (texto simples)
  
  status            String   
  creditLimit       Float?
  location          Json?
  addressDetails    Json?
  
  // --- VÍNCULO COM VENDEDOR ---
  sellerId          String?  // <--- ESTA LINHA ESTAVA FALTANDO
  seller            Seller?  @relation(fields: [sellerId], references: [id])
  // ----------------------------

  tenantId          String
  tenant            Tenant   @relation(fields: [tenantId], references: [id])
  
  deliveries        Delivery[]
  @@index([tenantId])
  @@index([cnpj])
  @@index([tradeName]) // Para busca no import
  @@index([legalName]) // Para busca no import
  @@index([status])
}

model Route {
  id                String   @id @default(uuid())
  name              String
  date              DateTime
  status            String   
  startTime         String?
  endTime           String?
  estimatedDistance Float?
  estimatedTime     Int?

  tenantId          String
  tenant            Tenant   @relation(fields: [tenantId], references: [id])
  
  driverId          String?
  driver            Driver?  @relation(fields: [driverId], references: [id])
  
  vehicleId         String?
  vehicle           Vehicle? @relation(fields: [vehicleId], references: [id])
  
  deliveries        Delivery[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  occurrences       Occurrence[]
  @@index([tenantId])
  @@index([driverId])
  @@index([date]) // Crítico para filtrar rotas do dia
  @@index([status])
}

model Delivery {
  id              String   @id @default(uuid())
  invoiceNumber   String
  volume          Float
  weight          Float
  value           Float
  priority        String   
  status          String   
  
  product         String?
  salesperson     String?

  proofOfDelivery String?
  failureReason   String?

  customerId      String
  customer        Customer @relation(fields: [customerId], references: [id])
  
  routeId         String?
  route           Route?   @relation(fields: [routeId], references: [id])
  
  driverId        String?
  driver          Driver?  @relation(fields: [driverId], references: [id])
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // --- AUDITORIA DE WORKFLOW ---
  arrivedAt          DateTime?
  unloadingStartedAt DateTime?
  unloadingEndedAt   DateTime?
  @@index([routeId])
  @@index([invoiceNumber]) // Crítico para o motorista baixar nota
  @@index([customerId])
  @@index([status])
}

model AiLearning {
  id        String   @id @default(uuid())
  phrase    String
  intent    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Occurrence {
  id          String   @id @default(uuid())
  type        String   
  description String
  
  driverId    String
  driver      Driver   @relation(fields: [driverId], references: [id])
  
  routeId     String?
  route       Route?   @relation(fields: [routeId], references: [id])
  
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  
  createdAt   DateTime @default(now())
}

enum JourneyEventType {
  JOURNEY_START
  JOURNEY_END
  MEAL_START
  MEAL_END
  WAIT_START
  WAIT_END
  REST_START
  REST_END
}

model DriverJourneyEvent {
  id              String           @id @default(uuid())
  driverId        String
  driver          Driver           @relation(fields: [driverId], references: [id])
  tenantId        String
  tenant          Tenant           @relation(fields: [tenantId], references: [id])
  type            JourneyEventType
  timestamp       DateTime         @default(now())
  latitude        Float?
  longitude       Float?
  locationAddress String?
  notes           String?

  createdAt       DateTime         @default(now())

  @@index([driverId])
  @@index([tenantId])
}